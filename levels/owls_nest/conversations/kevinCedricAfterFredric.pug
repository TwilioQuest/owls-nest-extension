- const STATE_KEY = 'com.twilioquest.owls_nest';
- const worldState = getState(STATE_KEY);

conversation(display_name="Kevin")
  case lastResponse
    when "how_shut_it_down"
      statement#how_shut_it_down
      responses
        response#on_it.
          !{getTranslatedString('owls_nest.kevinCedricAfterFredric.how_shut_it_down_on_it')}
    
    when "on_it"
      statement#not_much_time
      responses

    default
      statement#oh_no
      responses
        response#how_shut_it_down.
          !{getTranslatedString('owls_nest.kevinCedricAfterFredric.default')}

  statements
    statement#not_much_time
      text.
        !{getTranslatedString('owls_nest.kevinCedricAfterFredric.not_much_time')}
    statement#how_shut_it_down
      text.
        !{getTranslatedString('owls_nest.kevinCedricAfterFredric.how_shut_it_down')}
    statement#oh_no
      text.
        !{getTranslatedString('owls_nest.kevinCedricAfterFredric.oh_no')}

// Flush world state changes, if any
- setState(STATE_KEY, worldState);
